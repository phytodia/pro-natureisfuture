<h1>Phototheque</h1>
<%= link_to "ajouter un fichier",phototheque_add_file_path%>


<ul>
  <% @phototheque.files.each do |file| %>
    <% if file.previewable? %>
      <li>
        <%= image_tag file.preview(resize_to_limit: [300, 300]) %>
        <%= link_to "Download", rails_blob_path(file, disposition: 'attachment') %>
      </li>
    <% end %>
  <% end %>
</ul>
