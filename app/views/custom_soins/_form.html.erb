<%= simple_form_for @custom_soin, :url => {:action =>"create"} do |f|%>
<%= f.input :name, label:"Nom du soin" %>
<%= f.input :description, label:"Description" %>
<%= f.input :category, collection: ["visage","corps","massage","onglerie","epilation","autre"], label:"Catégorie du soin"%>
<%= f.association :products,collection: @products,as: :check_boxes, label:"Produits présents dans le soin" %>
<%= f.input :estimated_time, label:"Temps estimé du soin en min" %>
<%= f.input :price_ttc, label:"Prix TTC" %>
<%= f.submit %>
<% end %>
